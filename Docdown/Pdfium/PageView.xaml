<UserControl x:Class="PdfiumViewer.Wpf.PageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:ClassModifier="internal"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Margin="6" Background="White">
    <UserControl.Effect>
        <DropShadowEffect ShadowDepth="0" BlurRadius="7"/>
    </UserControl.Effect>
    <Grid>
        <Image x:Name="Img" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
        <Canvas x:Name="LinkCanvas"/>
    </Grid>
</UserControl>